{
  "name": "blackfyre",
  "version": "0.1.0-beta1",
  "description": "Distributed asynchronous task queue/job queue",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "scripts": {
    "test": "tsc && ava",
    "coverage": "nyc npm test",
    "build": "tsc",
    "clean": "rm -rf dist/*",
    "lint": "eslint src"
  },
  "keywords": [
    "rabbitmq",
    "amqp",
    "produer",
    "consumer",
    "worker",
    "job",
    "task",
    "queue",
    "asynchronous",
    "distributed system",
    "job-queue"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xizhibei/blackfyre"
  },
  "homepage": "https://github.com/xizhibei/blackfyre",
  "bugs": "https://github.com/xizhibei/blackfyre/issues",
  "author": "Xu Zhipei <xuzhipei@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=4"
  },
  "ava": {
    "files": [
      "dist/test/**/*.test.js"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "include": [
      "dist/src"
    ],
    "all": true
  },
  "dependencies": {
    "amqplib": "^0.5.1",
    "bluebird": "^3.5.0",
    "debug": "^3.0.1",
    "lodash": "^4.17.4",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.6",
    "@types/bluebird": "^3.5.19",
    "@types/bluebird-global": "^3.5.3",
    "@types/lodash": "^4.14.91",
    "@types/node": "^8.5.5",
    "@types/uuid": "^3.4.3",
    "ava": "^0.24.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.0",
    "eslint-plugin-import": "^2.7.0",
    "nyc": "^11.4.1",
    "typescript": "^2.6.2",
    "typescript-eslint-parser": "^11.0.0"
  }
}
